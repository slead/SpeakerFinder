<%= simple_form_for @speaker, defaults: { input_html: { class: 'form-control speaker_input' }, label: false } do |f| %>

  <div class="row">
    <div id="speakerContactDetails" class="col-md-3">
        <%= f.input :name, placeholder: 'Name *', label: false %>
        <%= f.input :email, placeholder: 'Email address *', label: false %>
        <%= f.input :city, placeholder: 'City *' %>
        <%= f.input :blurb, placeholder: 'Short blurb' %>
        <%= f.input :twitter_handle, placeholder: '@Twitter handle' %>
        <%= f.input :website, placeholder: 'Website' %>
    </div>
    
    <div id="speakerAbout" class="col-md-8 col-md-offset-1">
      <div class="form-group">
        <%= f.text_area :about, { class: 'form-control', size: "30x12", :placeholder => "Please enter some detailed information about your talents, experience, etc" } %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= link_to " Cancel", speakers_path, class: 'icon fa fa-arrow-circle-left' %>
        <%= f.submit 'Save Speaker', class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
