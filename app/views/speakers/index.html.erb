<div id="speakers" class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Speakers</h1>
      
      <table class="table table-striped">
      <thead> 
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% @speakers.each do |speaker| %>
        <tr>
          <td><%= link_to speaker.name, speaker_path(speaker) %></td>
          <td><%= speaker.email %></td>
          <td>
          <%= link_to 'Edit', edit_speaker_path(speaker), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', speaker_path(speaker), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          
          </td>
        </tr>
      <% end %>
      </table>
    </div><!--col-md-12-->
  </div><!--row-->
  
  <div class="row">
    <div class = "col-md-12">
      <%= link_to "Add new Speaker", new_speaker_path, class: 'btn btn-default' %>
    </div>
  </div>
  
</div><!--container-->