<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag(speakers_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Speaker Name" %>
        <i id="btnClear-search" class="fa fa-times-circle btnClearSearch" data-searchbox="search"></i>
        <%= submit_tag "Search", class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>
  </div>
</div>