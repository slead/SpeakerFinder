<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_tag(speakers_path, :method => "get", id: "geo-search-form") do %>
        <%= text_field_tag :geosearch, params[:geosearch], placeholder: "Search for a speaker by city", class: "form-control" %>
        <i id="btnClear-geosearch" class="fa fa-times-circle btnClearSearch"></i>
        <%= submit_tag "Search", class: 'btn btn-primary btn-sm' %>
      <% end %>
    </div>
  </div>
</div>