<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for @geo_search, url: speakers_path, html: { class: 'well form navbar-form', role: 'form' , method: 'get' } do |f| %>
        <div class="form-group">
          <%= f.input :city, placeholder: 'Find a speaker close to this city', label: false %>
        </div>
        <%= f.submit 'Search', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>